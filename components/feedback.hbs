<section class="section section_bg-grad feedback">
    <div class="container">
        <div class="feedback__img" {{#if img}} style="background-image: url({{img}})" {{/if}}></div>
        <div class="feedback__block">
            <div class="web-form">
                <form action="">
                    <h2 class="web-form__title">
                        Получите рассчёт проекта
                    </h2>
                    <p class="web-form__description">
                        Заполните форму и наш менеджер свяжется с вами в ближайшее время
                    </p>
                    <label class="label label_column ">
                        <span class="label__title">
                            Имя<span class="label__required">*</span>
                        </span>
                        <span class="label__content ">
                            <input type="text" placeholder="Имя" required="">
                        </span>
                    </label>
                    <label class="label label_column ">
                        <span class="label__title">
                            Телефон<span class="label__required">*</span>
                        </span>
                        <span class="label__content ">
                            <input type="text" placeholder="Телефон" required="">
                        </span>
                    </label>
                    <label class="label label_column ">
                        <span class="label__title">
                            Email<span class="label__required">*</span>
                        </span>
                        <span class="label__content ">
                            <input type="text" placeholder="Email" required="">
                        </span>
                    </label>
                    <div class="label label_column ">
                        <span class="label__title"></span>
                        <span class="label__content" data-column="">
                            <label class="custom-input">
                                <input name="" type="checkbox" value="123">
                                <span class="custom-input__item"></span>
                                <span class="custom-input__title" title="">Я согласен на обработку персональных данных</span>
                            </label>
                        </span>
                    </div>
                    <input type="submit" name="web_form_submit" class="button button__conversion" value="Отправить">
                </form>
            </div>
        </div>
    </div>
</section>